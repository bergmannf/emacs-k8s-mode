# -*- mode: snippet -*-
# name: mutatingadmissioncontroller
# key: mutatingadmission
# expand-env: ((yas-indent-line 'fixed) (yas-wrap-around-region nil))
# --
apiVersion: admissionregistration.k8s.io/v1
kind: MutatingWebhookConfiguration
metadata:
  name: ${1:myadmissioncontroller.example.com}
webhooks:
- name: "${1:myadmissioncontroller.example.com}"
  rules:
  - apiGroups:   [""]
    apiVersions: ["v1"]
    operations:  ["CREATE"]
    resources:   ["pods"]
    scope:       "Namespaced"
  clientConfig:
    service:
      namespace: "${2:mynamespace}"
      name: "${3:myservice}"
    caBundle: "${4:CA_BUNDLE}"
  admissionReviewVersions: ["v1", "v1beta1"]
  sideEffects: None
  timeoutSeconds: 5
